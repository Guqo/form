        title Cviky
        style
            include css/styles.css
    body
        main
            h1 #{nadpis}
            table 
                thead 
                    tr 
                        th Cvik 
                        th Váha
                        th Série 
                        th Opakování
                tbody 
                    each pl in players 
                        tr 
                            td  #{pl.player}        
                            td  #{pl.points}
                            td  #{pl.date}
                            td  #{pl.time}
            button
